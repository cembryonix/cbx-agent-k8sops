{
  "mcp_servers": {
    "k8s_mcp": {
      "transport": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e", "CBX_CONFIG_NAME=stdio",
        "-v", "MY_USER_HOME_DIR/.kube:/home/appuser/.kube:ro",
        "-v", "MY_USER_HOME_DIR/.config/argocd:/home/appuser/.config/argocd:ro",
        "ghcr.io/cembryonix/cbx-mcp-server-k8s:v0.1.0"
      ]
    }
  }
}
